{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start:debug"],
        "sourceMaps": true,
        "envFile": "${workspaceFolder}/.env",
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal",
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Tests",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "test:debug"],
        "stopOnEntry": false,
        "sourceMaps": true
      }
    ]
  }